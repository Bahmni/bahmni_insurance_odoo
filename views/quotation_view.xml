<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="payment_type_form_sale_quotation" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="payment_type" required="1"/>
            </field>
        </field>
    </record>
    
    <record id="payment_type_sale_order_line_form_sale_quotation" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath
                expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="payment_type"/>
            </xpath>
        </field>
    </record>
    
    <record id="nhis_number_field_sale_quotation" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field String="NHIS Number" name="nhis_number"/>
                <field String="Insurance Status" name="InsuranceActive"/>
            </field>
            <field name="shop_id" position="after">
                <field String="Claim Id" name="claim_id"/>
            </field>
        </field>
    </record>
    
 </odoo>