<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="insurance_odoo_product_map_form_view" model="ir.ui.view">
        <field name="name">Insurance-Odoo Product Mapper</field>
        <field name="type">form</field>
        <field name="model">insurance.odoo.product.map</field>
        <field name="arch" type="xml">
            <form string="Insurance-Odoo Product Map">
                <sheet>
                    <group>
                        <field name="item_code"/>
                        <field name="insurance_product"/>
                        <field name="insurance_price"/>
                        <field name="odoo_product_id"/>
                        <field name="valid_from"/>
                        <field name="valid_till"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="insurance_odoo_product_map_tree_view" model="ir.ui.view">
        <field name="name">insurance.odoo.product.map.tree</field>
        <field name="model">insurance.odoo.product.map</field>
        <field name="type">tree</field>
        <field name="domain">[('is_active','=', 'true')]</field>
        <field name="arch" type="xml">
            <tree string="Insurance Product Mapper">
                <field name="item_code"/>
                <field name="insurance_product"/>
                <field name="insurance_price"/>
                <field name="odoo_product_id"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>
    <record id="insurance_odoo_product_map_filter" model="ir.ui.view">
        <field name="name">insurance.odoo.product.map.filter</field>
        <field name="model">insurance.odoo.product.map</field>
        <field name="arch" type="xml">
            <search string="Search Insurance Product">
                <field name="item_code"/>
                <field name="insurance_product"/>
                <field name="insurance_price"/>
                <field name="odoo_product_id"/>
                <field name="is_active"/>
            </search>
        </field>
    </record>
    <record id="action_insurance_odoo_product_mapping" model="ir.actions.act_window">
        <field name="name">Insurance - Odoo Product mapping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.odoo.product.map</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem action="action_insurance_odoo_product_mapping"
        id="menu_action_insurance_odoo_product_mapping"
        parent="sales_team.menu_sale_config" sequence="34"/>
</odoo>
