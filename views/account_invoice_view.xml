<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payment_type_account_invoice_form_view" model="ir.ui.view">
        <field name="name">account.invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="print_all_data" action = "print_all_data"  type="object"  string="Print Combined Invoice" class="oe_highlight"  groups="account.group_account_invoice" attrs="{'invisible': ['|',('type', '=', 'out_refund'), ('state', 'not in', ('open','proforma2','paid'))]}"/>
                 <button name="invoice_print" string="Print" type="object" attrs="{'invisible': ['|',('type', '=', 'out_refund'), ('state', 'not in', ('open','proforma2','paid'))]}" class="oe_highlight" groups="account.group_account_invoice"/>
               

            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="payment_type"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="claim_code"/>
            </xpath>
        </field>
    </record>
    
    <record id="payment_type_account_invoice_tree_view" model="ir.ui.view">
        <field name="name">account.invoice.tree</field>
        <field name="model">account.invoice</field>
        <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="payment_type" />
            </field>
        </field>
    </record>
    
</odoo>
