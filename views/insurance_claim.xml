 <field name="ipd_code" attrs="{'invisible':[('package_claim', '!=', True)]}" > 
        <tree editable="false">    
                                            <field name="ipd_code"/>
                                            <field name="claimed_amount"/>
                                            <field name="state"/>
                                            <field name="claim_comments"/>
