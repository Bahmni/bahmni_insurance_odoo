<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!--Claims Tree View -->
    <record id="insurance_claims_tree_view" model="ir.ui.view">
        <field name="name">insurance.claim.tree</field>
        <field name="model">insurance.claim</field>
        <field name="priority">1</field>
        <field name="domain">[('state', 'in', ('draft', 'confirmed', 'rejected','passed','submitted'))]</field>
        <field name="arch" type="xml">
            <tree string="Claims" default_order='create_date desc'>
                <field name="claim_code" string="Claim Number"/>
                <field name="claimed_date"/>
                <field name="partner_id"/>
                <field name="claim_manager_id"/>
                <field name="claimed_amount_total" sum="Total Amount Claimed" widget="monetary"/>
                <field name="amount_approved_total" sum="Total Amount Approved" widget="monetary"/>
                <field name="state"/>
                <field name="claim_comments"/>
            </tree>
        </field>
    </record>

     <!--Claims Tree View -->
    <record id="insurance_claim_package_tree_view" model="ir.ui.view">
        <field name="name">insurance.claim.package.tree</field>
        <field name="model">insurance.claim.package</field>
        <field name="arch" type="xml">
            <tree string="Claims" default_order='create_date desc'>
                <field name="ipd_code"/>
                <field name="claimed_amount"/>
                <field name="item_code"/>
            </tree>
        </field>
    </record>

    <record id="action_insurance_claims_view" model="ir.actions.act_window">
        <field name="name">Insurance Claims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.claim</field>
        <field name="domain">[]</field>
        <field name="view_id" ref="insurance_claims_tree_view"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
    </record>
    
    <menuitem action="action_insurance_claims_view"
        id="menu_insurance_claim" name="Claims" groups="group_insurance_claim_user"
        parent="bahmni_insurance_odoo.menu_insurance_title" sequence="1"/>
        
    <!--Claims Form View -->
