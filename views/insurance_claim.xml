                                    <field name="product_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_total"/>
                                    <field name="state"/>
                                    <field name="rejection_reason"/>
                                    <field invisible="1" name="currency_id"/>
                                </tree>
                                <kanban class="o_kanban_mobile">
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field groups="product.group_uom" name="product_uom"/>
                                    <field name="price_total"/>
                                    <field invisible="1" name="currency_id"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                <div class="row">
                                                    <div class="col-xs-12">
                                                        <strong>
                                                            <span>
                                                                <t t-esc="record.product_id.value"/>
                                                            </span>
                                                        </strong>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-8 text-muted">
                                                        <span>
                                                            <t t-esc="record.product_qty.value"/>
                                                            <t t-esc="record.product_uom.value"/>
                                                        </span>
                                                    </div>
                                                    <div class="col-xs-4 text-muted">
                                                        <span class="pull-right text-right">
                                                            <t t-esc="record.price_total.value"/>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="Total Amount">
                                <field name="claimed_amount_total" widget="monetary"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Sale Orders">
                            <separator string="Sale Orders"/>
                            <field name="sale_orders" nolabel="1"></field>
                        </page>
                        <page string="Claim History">
                            <field name="insurance_claim_history" nolabel="1" readonly="1" />
                        </page>

                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="insurance_claims_history_tree_view" model="ir.ui.view">
        <field name="name">insurance.claim.history.tree</field>
        <field name="model">insurance.claim.history</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree string="Claim History">
                <field name="claim_code" readonly="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="claim_manager_id" readonly="1"/>
                <field name="state" readonly="1"/>
                <field name="claim_comments" readonly="1"/>
                <field name="rejection_reason" readonly="1"/>
                <field name="create_date" String="Date" readonly="1"/>
            </tree>
        </field>
    </record>
    
    <record id="action_insurance_submitted_claims_view" model="ir.actions.act_window">
        <field name="name">Submitted Claims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
         <field name="domain">[('state', 'not in', ('draft', 'rejected', 'confirmed'))]</field>
    </record>

    <record id="action_insurance_checked_claims_view" model="ir.actions.act_window">
        <field name="name">Checked Claims</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">insurance.claim</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
         <!-- <field name="domain">[('state', 'not in', ('draft', 'rejected', 'confirmed'))]</field> -->
         <field name="domain">[('state', '=', 'checked')]</field>
    </record>

    
    <record id="action_insurance_rejected_claims_view" model="ir.actions.act_window">
        <field name="name">Rejected Claims</field>
