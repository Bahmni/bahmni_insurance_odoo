                <sheet>
                    <div class="oe_title">
                        <!-- <h1>
                            <field String="Claim Code"
                                attrs="{'invisible': [('state', 'in', ['draft', 'confirmed'])]}"
                                name="claim_code" readonly="1"/>
                        </h1> -->
                        
                    </div>
                    <group>
                        <group>
                        <field String="Claim Code" name="claim_code"/>
