 <!-- DO NOT REMOVE THIS TABLE. MANDATORY IN SOME COUNTRIES -->
            <div class="row" t-if="len(o.tax_line_ids) > 0">
                <div class="col-xs-6">
                    <table class="table table-condensed" style="font-size:20px;">
                        <thead>
                            <tr>
                                <th>Tax</th>
                                <th class="text-right">Base</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.tax_line_ids" t-as="t">
                                <td><span t-field="t.tax_id.description"/></td>
                                <td class="text-right">
                                    <span t-field="t.base" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                <td class="text-right">
                                    <span t-field="t.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                                
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>



        <p t-if="o.comment" style="font-size:20px;">
                <strong>Comment:</strong>
                <span t-field="o.comment"/>
            </p>
            <p t-if="o.payment_term_id" style="font-size:20px;">
                <span t-field="o.payment_term_id.note"/> 
            </p>
            
            <p style="font-size:20px;">
                <strong>Sales Person:</strong>
                <span t-field="o.user_id.name"/> 
            </p>
            <p t-if="o.fiscal_position_id.note" style="font-size:20px;">
                <strong>Fiscal Position Remark:</strong>
                <span t-field="o.fiscal_position_id.note"/>
            </p>




                </div>
            </t>   
    </template>

    <template id="report_invoice_combined">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="bahmni_insurance_odoo.report_combined_invoices"/>
            </t>

        </t>
    </template>
</odoo>
