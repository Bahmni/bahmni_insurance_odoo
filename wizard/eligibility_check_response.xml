<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record id="insurance_eligibility_check_result_view" model="ir.ui.view">
        <field name="name">view.insurance.eligibility.result</field>
        <field name="type">form</field>
        <field name="model">insurance.eligibility</field>
        <field name='flags'>{'initial_mode': 'edit'}</field>
        <field name="arch" type="xml">
            <form string="View Insurance details">
            
                <group>
                    <group>
                        <field name="insuree_name"/>
                    </group>
                    <group>
                        <field name="nhis_number"/>
                    </group>
                </group>
                <group readonly="True">
                    <field name="eligibility_line_item"  string="Detail" readonly="True">
                        <tree open="false" >
                            <field name="valid_till" readonly="True"/>
                            <field name="category" readonly="True"/>
                            <field name="eligibility_balance" readonly="True"/>
                        </tree>
                    </field>
                </group>
            </form>
                <footer>
                    <button string="Close" class="oe_link" special="cancel" />
                </footer>

        </field>
    </record>
    
</odoo>
