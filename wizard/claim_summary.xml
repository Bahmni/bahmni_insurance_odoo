<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_claim_summary_wizard" model="ir.ui.view">
        <field name="name">claim.summary.wizard.form</field>
        <field name="model">claim.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="Insurance Claim summary">
                <group>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button name="generate_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_report_insurance_claim_summary" model="ir.actions.act_window">
        <field name="name">Insurance Claim summary</field>
        <field name="res_model">claim.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- <menuitem id="menu_report_insurance_claim_summary" name="Insurance Claim summary" action="action_report_insurance_claim_summary" parent="menu_insurance_report" sequence="3"/> -->

</odoo>